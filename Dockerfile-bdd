FROM mariadb:10

env MYSQL_ROOT_USER root
env MYSQL_USERNAME openxpki
env MYSQL_DATABASE openxpki
env MYSQL_PASSWORD openxpki_pwd

RUN exec echo "CREATE DATABASE IF NOT EXISTS ${MYSQL_DATABASE}; GRANT ALL PRIVILEGES ON ${MYSQL_DATABASE}.* TO ${MYSQL_USERNAME}@'%' IDENTIFIED BY '${MYSQL_PASSWORD}';" \
    | mysql -u ${MYSQL_ROOT_USER} -p${MYSQL_ROOT_PASSWORD}

